<Window x:Class="Ascon.Pilot.SDK.SpwReader.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        ResizeMode="NoResize"
        d:DesignHeight="180" d:DesignWidth="300"
        SizeToContent="Height"
        ShowInTaskbar="True"
        ShowActivated="True"
        WindowStartupLocation="CenterScreen"
        Title="О интеграции с КОМПАС"
        Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Плагин для получение данных  из Компас-спецификации."
                   Margin="10" TextWrapping="WrapWithOverflow"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="10">
            <TextBlock Text="Разработчик Козинцев Олег"/>
            <TextBlock Text="e-mail:o.kozintsev@gmail.com"/>
            <TextBlock Text=""/>
            <Button x:Name="btnClose" Content="Close" 
                    IsDefault="True"
                    Width="80" 
                    IsCancel="True" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
